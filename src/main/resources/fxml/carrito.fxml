<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.ToggleSwitch?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libreria.ui.controllers.CarritoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="title-3" text="Carrito Actual" />

        <TableView fx:id="tablaCarrito" styleClass="striped" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colProducto" prefWidth="200.0" text="Producto / Servicio" />
                <TableColumn fx:id="colCantidad" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Cant." />
                <TableColumn fx:id="colPrecio" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="P. Unit." />
                <TableColumn fx:id="colSubtotal" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Subtotal" />
                <TableColumn fx:id="colAccion" prefWidth="50.0" style="-fx-alignment: CENTER;" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-background-color: -color-bg-subtle; -fx-background-radius: 5;">
            <children>
                <Label text="TOTAL A PAGAR:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblTotal" style="-fx-font-weight: bold;" text="\$ 0.00" textFill="#268a43">
                    <font>
                        <Font size="32.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <children>
                <ToggleSwitch fx:id="toggleDescuento" text="Descuento Efectivo" />
                <ToggleSwitch fx:id="toggleFactura" text="Factura A" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onCobrar" prefHeight="50.0" styleClass="success" text="COBRAR (F12)">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
