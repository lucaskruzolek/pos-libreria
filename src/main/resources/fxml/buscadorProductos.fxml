<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.ToggleSwitch?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="284.0" prefWidth="556.0" spacing="5.0" style="-fx-background-color: -color-bg-subtle; -fx-background-radius: 5;" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libreria.ui.controllers.BuscadorProductosController">
    <children>
        <Label style="-fx-font-weight: bold;" text="Producto Físico (Código de Barras)" />
        <HBox spacing="10.0">
            <children>
                <TextField fx:id="txtSku" prefWidth="337.0" promptText="Escanear SKU..." HBox.hgrow="ALWAYS" />
                <Button onAction="#onAgregarFisico" text="Agregar" />
            </children>
        </HBox>
        <TableView fx:id="tablaBusqueda" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colBusquedaNombre" minWidth="80.0" prefWidth="250.0" text="Nombre" />
                <TableColumn fx:id="colBusquedaCosto" text="Costo" />
                <TableColumn fx:id="colBusquedaEfectivo" text="Efectivo" />
                <TableColumn fx:id="colBusquedaTransferencia" text="Transferencia" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
